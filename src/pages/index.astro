---
import Layout from "../layouts/Layout.astro";
const base = import.meta.env.BASE_URL;
// import { simulateDivision } from "@script/division/simulation-division";
---

<Layout title="Turing Machine">
  <main
    class="container mx-auto min-h-screen flex flex-col items-center pt-12 pb-4 px-4 sm:px-2"
  >
    <div class="w-full flex justify-between items-center mb-8">
      <div id="result-last" class="text-2xl font-bold">Last Result: -</div>
      <div id="result-current" class="text-2xl font-bold">
        Current Result: -
      </div>
    </div>

    <div class="flex w-full md:max-w-xl sm:mx-4 mx-2 rounded shadow mb-8">
      <button
        id="tab-division"
        class="tab w-full flex justify-center font-medium px-5 py-2 border bg-violet-700 text-white border-violet-500 hover:bg-violet-600"
      >
        Division
      </button>
      <button
        id="tab-factorial"
        class="tab w-full flex justify-center font-medium rounded-l px-5 py-2 border bg-white text-gray-800 border-gray-200 hover:bg-gray-100"
      >
        Factorial
      </button>
      <button
        id="tab-subtraction"
        class="tab w-full flex justify-center font-medium rounded-r px-5 py-2 border bg-white text-gray-800 border-gray-200 hover:bg-gray-100"
      >
        Subtraction
      </button>
    </div>

    <!-- division -->
    <div id="content-division" class="tab-content hidden container mx-auto">
      <div class="md:flex">
        <div id="content-form-division" class="my-6 md:w-1/2 md:mr-6">
          <div class="max-w-3xl bg-white rounded-md shadow-md px-6 py-8">
            <h1 class="mb-4 text-2xl font-bold">Division</h1>
            <div class="mb-4">
              <label for="input-m-division" class="block text-gray-700"
                >Input m:</label
              >
              <input
                type="number"
                id="input-m-division"
                class="block w-full mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
                placeholder="Enter dividend (m)"
              />
            </div>
            <div class="mb-4">
              <label for="input-n-division" class="block text-gray-700"
                >Input n:</label
              >
              <input
                type="number"
                id="input-n-division"
                class="block w-full mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
                placeholder="Enter divisor (n)"
              />
            </div>
            <button
              id="simulateDivisionButton"
              class="px-4 py-2 mt-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
            >
              Simulate
            </button>

            <div class="my-4">
              <div class="flex items-center mb-4">
                <label
                  for="result-division"
                  class="block text-gray-700 font-bold text-lg mr-2"
                  >Result:</label
                >
                <div id="result-division" class="text-xl font-bold"></div>
              </div>
              <div class="flex items-center">
                <label
                  for="expected-result-division"
                  class="block text-gray-700 font-bold text-lg mr-2"
                  >Expected Result:</label
                >
                <div id="expected-result-division" class="text-xl font-bold">
                </div>
              </div>
            </div>

            <div id="transitions-division" class="py-2 my-2 overflow-x-auto">
            </div>
            <div id="playingDivision" class="flex flex-wrap gap-2 mt-4">
              <button
                id="resetDivisionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Reset
              </button>
              <button
                id="previousDivisionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Previous
              </button>
              <button
                id="nextDivisionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Next
              </button>
              <button
                id="playDivisionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Play
              </button>
              <label
                for="speedDivisionInput"
                class="block text-gray-700 mt-1 py-2">Speed:</label
              >
              <select
                id="speedDivisionInput"
                class="block mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                <option value="1">So Very Fast</option>
                <option value="10">Very Fast</option>
                <option value="100">Fast</option>
                <option value="500" selected>Medium</option>
                <option value="1000">Slow</option>
                <option value="2000">Very Slow</option>
              </select>
            </div>
          </div>
        </div>
        <div
          id="diagram-division"
          class="my-6 max-w-full mx-auto md:w-1/2 md:ml-6"
        >
        </div>
      </div>
    </div>

    <div id="content-factorial" class="tab-content container mx-auto hidden">
      <div class="md:flex md:space-x-6">
        <!-- Bagian form -->
        <div class="my-6 md:w-1/2">
          <div class="max-w-3xl bg-white rounded-md shadow-md px-6 py-8">
            <h1 class="mb-4 text-2xl font-bold">Factorial</h1>
            <div class="mb-4">
              <label for="input-m-factorial" class="block text-gray-700"
                >Input m:</label
              >
              <input
                type="number"
                id="input-m-factorial"
                class="block w-full mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
                placeholder="Enter a non-negative number"
              />
            </div>
            <button
              id="simulateFactorialButton"
              class="px-4 py-2 mt-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
            >
              Simulate
            </button>
            <div class="my-4">
              <div class="flex items-center mb-4">
                <label
                  for="result-factorial"
                  class="block text-gray-700 font-bold text-lg">Result:</label
                >
                <div id="result-factorial" class="text-xl font-bold"></div>
              </div>
              <div class="flex items-center">
                <label
                  for="expected-result-factorial"
                  class="block text-gray-700 font-bold text-lg"
                  >Expected Result:</label
                >
                <div id="expected-result-factorial" class="text-xl font-bold">
                </div>
              </div>
            </div>
            <div id="transitions-factorial" class="py-2 my-2 overflow-x-auto">
            </div>
            <div id="playingFactorial" class="flex flex-wrap gap-2 mt-4">
              <button
                id="resetFactorialButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Reset
              </button>
              <button
                id="previousFactorialButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Previous
              </button>
              <button
                id="nextFactorialButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Next
              </button>
              <button
                id="playFactorialButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Play
              </button>
              <label for="speedFactorialInput" class="block text-gray-700 mt-2">
                Speed:</label
              >
              <select
                id="speedFactorialInput"
                class="block mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                <option value="1">So Very Fast</option>
                <option value="10">Very Fast</option>
                <option value="100">Fast</option>
                <option value="500" selected>Medium</option>
                <option value="1000">Slow</option>
                <option value="2000">Very Slow</option>
              </select>
            </div>
          </div>
        </div>
        <div
          id="diagram-factorial"
          class="my-6 max-w-full mx-auto md:w-1/2 md:ml-6"
        >
        </div>
      </div>
    </div>

    <div id="content-subtraction" class="tab-content hidden container mx-auto ">
      <div class="md:flex">
        <!-- Bagian form -->
        <div class="my-6 md:w-1/3">
          <div class="max-w-3xl bg-white rounded-md shadow-md px-6 py-8">
            <h1 class="mb-4 text-2xl font-bold">Subtraction</h1>
            <div class="mb-4">
              <label for="input-m-subtraction" class="block text-gray-700"
                >Input m:</label
              >
              <input
                type="number"
                id="input-m-subtraction"
                class="block w-full mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
                placeholder="Enter minuend (m)"
              />
            </div>
            <div class="mb-4">
              <label for="input-n-subtraction" class="block text-gray-700"
                >Input n:</label
              >
              <input
                type="number"
                id="input-n-subtraction"
                class="block w-full mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
                placeholder="Enter subtrahend (n)"
              />
            </div>
            <button
              id="simulateSubtractionButton"
              class="px-4 py-2 mt-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
            >
              Simulate
            </button>

            <div class="my-4">
              <div class="flex items-center mb-4">
                <label
                  for="result-subtraction"
                  class="block text-gray-700 font-bold text-lg">Result:</label
                >
                <div id="result-subtraction" class="text-xl font-bold"></div>
              </div>
              <div class="flex items-center">
                <label
                  for="expected-result-subtraction"
                  class="block text-gray-700 font-bold text-lg"
                  >Expected Result:</label
                >
                <div id="expected-result-subtraction" class="text-xl font-bold">
                </div>
              </div>
            </div>
            <div id="transitions-subtraction" class="py-2 my-2 overflow-x-auto">
            </div>
            <div id="playingSubtraction" class="flex flex-wrap gap-2 mt-4">
              <button
                id="resetSubtractionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Reset
              </button>
              <button
                id="previousSubtractionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Previous
              </button>
              <button
                id="nextSubtractionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Next
              </button>
              <button
                id="playSubtractionButton"
                class="w-full md:w-auto px-4 py-2 text-white bg-violet-700 rounded-md hover:bg-violet-600 focus:outline-none focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                Play
              </button>
              <label
                for="speedFactorialInput"
                class="block text-gray-700 mt-1 py-2"
              >
                Speed:</label
              >
              <select
                id="speedSubtractionInput"
                class="block mt-1 px-2 py-2 border-gray-300 rounded-md shadow-sm focus:border-violet-700 focus:ring focus:ring-violet-700 focus:ring-opacity-50"
              >
                <option value="1">So Very Fast</option>
                <option value="10">Very Fast</option>
                <option value="100">Fast</option>
                <option value="500" selected>Medium</option>
                <option value="1000">Slow</option>
                <option value="2000">Very Slow</option>
              </select>
            </div>
          </div>
        </div>
        <div
          id="diagram-subtraction"
          class="my-6 max-w-full mx-auto md:w-2/3 md:ml-6"
        >
        </div>
      </div>
    </div>
  </main>

